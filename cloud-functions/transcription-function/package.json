{
  "name": "transcription-function",
  "version": "1.0.0",
  "description": "Cloud Function for automatic audio transcription",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "deploy": "gcloud functions deploy transcribeAudio --trigger-bucket=buckets_llamadas --runtime=nodejs18 --memory=1GB --timeout=540s"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.12.1",
    "@google-cloud/speech": "^6.7.0",
    "@google-cloud/bigquery": "^7.8.0",
    "@google-cloud/pubsub": "^4.8.0"
  },
  "engines": {
    "node": "18"
  }
}